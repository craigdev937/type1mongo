{
    "compilerOptions": {
        "moduleResolution": "node",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "resolveJsonModule": true,
        "outDir": "./dist/",
        "module": "CommonJS",
        "target": "es2022",
        "lib": ["dom", "esnext"],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "exclude": ["node_modules"],
    "include": ["src"]
}


